---
import MainLayout from '@Layouts/Layout.astro';
import Footer from '@Templates/guest/Footer.astro';
const { title } = Astro.props;
---

<MainLayout title={title}>
    <div class="flex overflow w-screen bg-gray-50 dark:bg-gray-900">
        <div
            id="main-content"
            class="relative w-full max-w-screen-2xl mx-auto overflow-y-auto bg-gray-50 dark:bg-gray-900 min-h-screen"
        >
            <div class="px-4 pt-2 2xl:px-0">
                <slot />
                <Footer />
            </div>
        </div>
    </div>
</MainLayout>
