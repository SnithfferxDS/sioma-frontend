---
import MainLayout from '@Layouts/Layout.astro';
import Navbar from '@Templates/guest/Navbar.astro';
import Footer from '@Templates/guest/Footer.astro';

const { title } = Astro.props;
---

<MainLayout title={title}>
    <Navbar />
    <div class="flex pt-16 overflow-hidden bg-gray-50 dark:bg-gray-900">
        <div
            id="main-content"
            class="relative w-full max-w-screen-2xl mx-auto h-full overflow-y-auto bg-gray-50 dark:bg-gray-900 min-h-screen"
        >
            <div class="px-4 pt-6 2xl:px-0">
                <slot />
            </div>
            <Footer />
        </div>
    </div>
</MainLayout>
