---
import { APP_AUTHOR, APP_S_VERSION, SITE_TITLE } from '@Configs/constants';
---

<footer
    class="fixed
        bottom-0
        left-0
        w-full
        z-20
        border-t
        bg-gray-500/25
        border-gray-300
        shadow-sm
        dark:border-gray-400"
>
    <div
        class="w-full mx-auto max-w-screen-xl p-4 md:flex md:items-center md:justify-between"
    >
        <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400"
            >© 2018-{new Date().getFullYear()}
            <a href="https://bytes4run.com/" class="hover:underline"
                >{APP_AUTHOR}</a
            >. Rights Limited.
        </span>
        <ul
            class="flex flex-wrap items-center mt-3 text-sm font-medium text-gray-500 dark:text-gray-400 sm:mt-0"
        >
            <li>
                <a href="/about" class="hover:underline me-4 md:me-6"
                    >{SITE_TITLE} {APP_S_VERSION}</a
                >
            </li>
            <li>
                <a href="/legal/privacy" class="hover:underline me-4 md:me-6"
                    >Politica de Privacidad</a
                >
            </li>
            <li>
                <a href="/legal/licensing" class="hover:underline me-4 md:me-6"
                    >Licencia</a
                >
            </li>
            <li>
                <a href="/legal/contact" class="hover:underline">Contáctenos</a>
            </li>
        </ul>
    </div>
</footer>
