---
const transactions = [
	{ name: "S. Evergreen", amount: "+$449", status: "completed" },
	{ name: "B. Sterling", amount: "+$399", status: "pending" },
	{ name: "D. Meadows", amount: "+$519", status: "completed" },
	{ name: "H. Hawthorne", amount: "+$319", status: "completed" },
	{ name: "L. Whitman", amount: "+$699", status: "pending" },
];
---

<div class="rounded-lg bg-white/25 dark:bg-gray-800/25 p-6 shadow-md">
	<div class="mb-4 flex items-center justify-between">
		<h3 class="text-lg font-semibold">Transactions</h3>
		<button class="text-blue-700 hover:text-blue-600"
			>View all transactions</button
		>
	</div>
	<div class="space-y-4">
		{
			transactions.map((transaction) => (
				<div class="flex items-center justify-between">
					<div class="flex items-center space-x-3">
						<div class="h-8 w-8 rounded-full bg-gray-200" />
						<span class="font-medium">{transaction.name}</span>
					</div>
					<span
						class={`font-medium ${transaction.status === "completed" ? "text-green-500" : "text-yellow-500"}`}
					>
						{transaction.amount}
					</span>
				</div>
			))
		}
	</div>
</div>
