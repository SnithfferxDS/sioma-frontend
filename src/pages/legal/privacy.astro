                    currentRoute={Astro.url.pathname}
                    headerTitle="Privacy Policies"
                />
            </div>
        </div>
        <div class="mt-8 flex flex-col">
            <h5 class="text-xl font-bold mb-6 text-gray-900 dark:text-white">
                Ultima actualización: <i
                    class="font-bold text-gray-900 dark:text-white"
                    >15 de Febrero de 2025</i
                >.
            </h5>
            <article
                class="prose dark:prose-invert lg:prose-xl max-w-none px-4 py-8"
            >
